generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Item {
  itemId     Int      @id @default(autoincrement())
  createdAt  DateTime @default(now()) @db.Timestamp(6)
  name       String
  code       String?
  price      Float?
  suppiler   String?
  categoryId Int?

  category Category[]
  supplier Supplier[]
}

model Category {
  categoryId Int    @id @default(autoincrement())
  name       String
  items      Item[]

  @@index([categoryId])
}

model Supplier {
  supplierId Int    @id @default(autoincrement())
  name       String
  items      Item[]

  @@index([supplierId])
}
